.evsof_rodape{
	height: 190px;
	background-image: url(../_imagens/template/fundo_rodape.png);
	background-position: center;
	background-repeat: repeat-x;
	clear: both;
}

.evsof_rodape_marcacao{
	width: 1000px;
	margin: 0px auto;
	padding: 0px;
	height: 190px;
	background-image: url(../_imagens/template/fundo_rodape_menu.png);
	background-position: center;
	background-repeat: no-repeat;
}

.evsof_rodape_menu{
	text-align: center;
	padding-top: 2.2em;
	color: #FFF;
	clear: both;
}

.evsof_rodape_menu a{
	color: #FFF;
}

.evsof_rodape_menu a:hover{
	color: #CCC;
}

.evsof_rodape_assinatura{
	clear: both;
	text-align: center;
	padding-top: 5em;
}

.evsof_rodape_assinatura_esq{
	float: left;
	margin-left: 300px;
}

.evsof_rodape_assinatura_dir{
	float: right;
	text-align: left;
	margin-right: 300px;
	padding-top: 1em;
}